<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mjz.mapper.TransactionMapper">
    <resultMap id="userMap" type="com.mjz.entities.TransactionDO" >
        <id property="id" column="id" />
        <result property="userId" column="user_id"/>
        <result property="name" column="name"/>
        <result property="type" column="type"/>
        <result property="outAccountId" column="out_account_id"/>
        <result property="inAccountId" column="in_account_id"/>
        <result property="amount" column="amount"/>
        <result property="comment" column="comment"/>
        <result property="createdTime" column="created_time"/>
    </resultMap>

    <select id="queryAllTransaction" resultMap="userMap" >
      SELECT * FROM transaction
    </select>

    <insert id="addTransaction" parameterType="com.mjz.entities.UserDO" useGeneratedKeys="true" keyProperty="id">
      insert into transaction(user_id,type,name,amount,comment,created_time)
      values(#{userId},#{type},#{name},#{amount},#{comment},#{createdTime})
    </insert>

</mapper>